# Set the default text attribute for all files
* text=auto

# Set specific attributes for code files
*.cs        diff=csharp

# Set binary merge drivers for project files
*.sln       merge=binary
*.csproj    merge=binary
*.vbproj    merge=binary
*.vcxproj   merge=binary
*.vcproj    merge=binary
*.dbproj    merge=binary
*.fsproj    merge=binary
*.lsproj    merge=binary
*.wixproj   merge=binary
*.modelproj merge=binary
*.wwaproj   merge=binary

# Set binary attribute for image files
*.jpg       binary
*.png       binary
*.gif       binary

# Set text attributes for common document formats
*.doc       diff=astextplain
*.DOC       diff=astextplain
*.docx      diff=astextplain
*.DOCX      diff=astextplain
*.dot       diff=astextplain
*.DOT       diff=astextplain
*.pdf       diff=astextplain
*.PDF       diff=astextplain
*.rtf       diff=astextplain
*.RTF       diff=astextplain

# Set binary attribute for SSDT project files
*.sqlproj   merge=binary

# Set text attributes for SSDT schema comparison files
*.dbschema  diff=astextplain
*.scmp      diff=astextplain

# Set binary attribute for SSDT data-tier application files
*.dacpac    merge=binary
